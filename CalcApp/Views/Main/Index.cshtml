@model CalcApp.Models.Item    
<div class="row">
    <div class="col-sm-8">
        @if (ViewBag.error == true)
            {
            <div class="alert alert-danger">
                <strong>Fehlerhafte Eingabe! - @ViewBag.error_title</strong> @ViewBag.error_desc               
            </div>
        }
        @using (Html.BeginForm(new { htmlAttributes = new { @id = "calc_form" } }))
        {
            @Html.AntiForgeryToken()           
                <div class="row">
                    <div class="col-lg-12">                                                                  
                        <div class="input-group input-group-lg">                           
                            <div class="input-group-btn">
                                <button type="reset" class="btn reset btn-warning" role="button">C</button>
                            </div>                           
                            @Html.EditorFor(model => model.Input, new { htmlAttributes = new { @id = "calc_input", @class = "form-control", @placeholder = "Ihre Eingabe z.B: 12+34*23-3+(342*54)/435", @autocomplete = "off", @Value = ViewBag.lastResult } })
                            <div class="input-group-btn">
                                <button type="button" value="" class="btn btn-default possub" role="button"><</button>                           
                                <button type="button" value="" class="btn btn-default posadd" role="button">></button>
                            </div>   
                        </div>                        
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-lg-5">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="*" class="btn btn-default calc" role="button">*</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="/" class="btn btn-default calc" role="button">/</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="7" class="btn btn-default calc" role="button">7</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="8" class="btn btn-default calc" role="button">8</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="9" class="btn btn-default calc" role="button">9</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="-" class="btn btn-default calc" role="button">-</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="4" class="btn btn-default calc" role="button">4</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="5" class="btn btn-default calc" role="button">5</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="6" class="btn btn-default calc" role="button">6</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="+" class="btn btn-default calc" role="button">+</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button id="btn_1" type="button" value="1" class="btn btn-default calc" role="button">1</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button id="btn_2" type="button" value="2" class="btn btn-default calc" role="button">2</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button id="btn_3" type="button" value="3" class="btn btn-default calc" role="button">3</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button id="btn_1" type="button" value="," class="btn btn-default calc" role="button">,</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button id="btn_1" type="button" value="0" class="btn btn-default calc" role="button">0</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <input type="submit" value="=" class="btn btn-success" role="button" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="(" class="btn btn-default calc" role="button">(</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value=")" class="btn btn-default calc closereq" role="button">)</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value=";" class="btn btn-default calc" role="button" data-toggle="tooltip" data-placement="top" title="Trennzeichen">;</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="Sin(" class="btn btn-default calc science open" role="button" data-toggle="tooltip" data-placement="top" title="Sinus - Sin(a)">Sin(a)</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="Cos(" class="btn btn-default calc science open" role="button" data-toggle="tooltip" data-placement="top" title="Kosinus - Cos(a)">Cos(a)</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="Tan(" class="btn btn-default calc science open" role="button" data-toggle="tooltip" data-placement="top" title="Tangens - Tan(a)">Tan(a)</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="Sqrt(" class="btn btn-default calc science open" role="button" data-toggle="tooltip" data-placement="top" title="Quadtratwurzel - Sqrt(a)">&radic;</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="Log(" class="btn btn-default calc science open" role="button" data-toggle="tooltip" data-placement="top" title="Logarithmus von verschiedenen Basen - Log(a;Basis)">Log(a;b)</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="In(" class="btn btn-default calc science open" role="button" data-toggle="tooltip" data-placement="top" title="Logarithmus Naturalis - In(a)">In(a)</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="Pow(" class="btn btn-default calc science open" role="button" data-toggle="tooltip" data-placement="top" title="Potenz - Pow(a;Exponent)">Pow(a;b)</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="Fac(" class="btn btn-default calc science open" role="button" data-toggle="tooltip" data-placement="top" title="Fakultät - Fac(a)">Fac(a)</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified">
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="Pi" class="btn btn-default calc" role="button" data-toggle="tooltip" data-placement="top" title="Konstante Pi (Kreizahl)">&pi;</button>
                                    </div>
                                    <div class="btn-group btn-group-lg">
                                        <button type="button" value="e" class="btn btn-default calc text-italic" role="button" data-toggle="tooltip" data-placement="top" title="Konstante e (Eulerzahl)">e</button>
                                    </div>
                                </div>
                            </div> 
                            <div class="col-lg-12">
                                <div class="btn-group btn-group-justified btn-group-lg" data-toggle="buttons">
                                    <label class="btn btn-default">                                       
                                        @Html.RadioButtonFor(model => model.Degree, false, new { @checked = "checked" }) Bogenmaß (RAD)
                                    </label>
                                    <label class="btn btn-default">                                        
                                        @Html.RadioButtonFor(model => model.Degree, true) Gradmaß (DEG)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }
            </div>
    <div class="col-sm-4">
        @if (ViewBag.ItemsList.Count > 0)
        {
            <div class="list-group">
                @foreach (var item in ViewBag.ItemsList)
                {
                    <div class="list-group-item clearfix">
                        <span class="pull-left button-group">
                            <button class="btn btn-xs insert_result" value="@item.Result"><span class="glyphicon glyphicon glyphicon-triangle-left"></span></button>
                        </span>                                                  
                        <span class="pull-right button-group">
                            <a class="btn btn-xs calc_btn_danger" href="@Url.Action("Delete", "Main", new { id = @item.Id })"><span class="glyphicon glyphicon-remove"></span></a>
                        </span>                       
                        <h4 class="list-group-item-heading">
                            @item.Result                               
                        </h4>
                        <p class="list-group-item-text">
                            @item.Input                                                                          
                        </p>
                        @if (item.Degree)
                        {
                            <span class="badge">DEG</span>
                        }
                        @if (!item.Degree)
                        {
                            <span class="badge">RAD</span>
                        }
                        
                    </div>
                }
                <div class="list-group-item clearfix">
                    <span class="pull-right button-group">                        
                        <a class="btn btn-danger" href="@Url.Action("DeleteAll", "Main")"><span class="glyphicon glyphicon-remove"></span></a>
                    </span>
                    <h4 class="list-group-item-text text-danger">
                       Alle Berechnungen löschen
                    </h4>
                </div>
            </div>
        }
        else
        {
            <div>Keine Berechnungen gefunden!</div>
        }
    </div> 
</div>

@section Scripts {  
    @Scripts.Render("~/bundles/custom_jquery")
}
